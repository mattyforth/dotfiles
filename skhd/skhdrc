# Application switching
hyper - b : open /Applications/Firefox.app
hyper - n : open /Applications/Obsidian.app
hyper - c : open ~/Applications/PhpStorm.app
hyper - t : open /Applications/iTerm.app
hyper - g : open /Applications/Fork.app
hyper - d : open "/Applications/Sequel Ace.app"
hyper - m : open /Applications/Mattermost.app
hyper - z : open /Applications/zoom.us.app
hyper - i : open /System/Applications/Messages.app
hyper - f : open /System/Library/CoreServices/Finder.app
hyper - w : open /Applications/WhatsApp.app

# Window management
alt - h : open -g "rectangle://execute-action?name=left-half"
alt - j : open -g "rectangle://execute-action?name=bottom-half"
alt - k : open -g "rectangle://execute-action?name=top-half"
alt - l : open -g "rectangle://execute-action?name=right-half"

alt - u : open -g "rectangle://execute-action?name=top-left"
alt - i : open -g "rectangle://execute-action?name=top-right"
alt - m : open -g "rectangle://execute-action?name=bottom-left"
alt - 0x2B : open -g "rectangle://execute-action?name=bottom-right"

alt - c : open -g "rectangle://execute-action?name=center"
alt - space : open -g "rectangle://execute-action?name=maximize"

alt + shift - h : open -g "rectangle://execute-action?name=previous-display"
alt + shift - l : open -g "rectangle://execute-action?name=next-display"

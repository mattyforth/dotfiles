# Application switching
hyper - b : open /Applications/Firefox.app
hyper - n : open /Applications/Obsidian.app
hyper - c : open ~/Applications/PhpStorm.app
hyper - t : open /Applications/Ghostty.app
hyper - g : open /Applications/Fork.app
hyper - d : open "/Applications/Sequel Ace.app"
hyper - m : open /Applications/Mattermost.app
hyper - z : open /Applications/zoom.us.app
hyper - i : open /System/Applications/Messages.app
hyper - f : open /System/Library/CoreServices/Finder.app
hyper - w : open /Applications/WhatsApp.app

# Window management
meh - h : open -g "rectangle://execute-action?name=left-half"
meh - j : open -g "rectangle://execute-action?name=bottom-half"
meh - k : open -g "rectangle://execute-action?name=top-half"
meh - l : open -g "rectangle://execute-action?name=right-half"

meh - u : open -g "rectangle://execute-action?name=top-left"
meh - i : open -g "rectangle://execute-action?name=top-right"
meh - m : open -g "rectangle://execute-action?name=bottom-left"
meh - 0x2B : open -g "rectangle://execute-action?name=bottom-right"

meh - c : open -g "rectangle://execute-action?name=center"
meh - space : open -g "rectangle://execute-action?name=maximize"

meh - y : open -g "rectangle://execute-action?name=previous-display"
meh - o : open -g "rectangle://execute-action?name=next-display"

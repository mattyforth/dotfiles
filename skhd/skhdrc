# Application switching
meh - b : open /Applications/Firefox.app
meh - n : open /Applications/Obsidian.app
meh - c : open /Applications/PhpStorm.app
meh - t : open /Applications/iTerm.app
meh - g : open /Applications/Fork.app
meh - d : open "/Applications/Sequel Ace.app"
meh - m : open /Applications/Mattermost.app
meh - z : open /Applications/zoom.us.app
meh - i : open /System/Applications/Messages.app
meh - f : open /System/Library/CoreServices/Finder.app
meh - w : open /Applications/WhatsApp.app

# Window management
hyper - h : open -g "rectangle://execute-action?name=left-half"
hyper - j : open -g "rectangle://execute-action?name=bottom-half"
hyper - k : open -g "rectangle://execute-action?name=top-half"
hyper - l : open -g "rectangle://execute-action?name=right-half"

hyper - u : open -g "rectangle://execute-action?name=top-left"
hyper - i : open -g "rectangle://execute-action?name=top-right"
hyper - m : open -g "rectangle://execute-action?name=bottom-left"
hyper - 0x2B : open -g "rectangle://execute-action?name=bottom-right"

hyper - c : open -g "rectangle://execute-action?name=center"
hyper - space : open -g "rectangle://execute-action?name=maximize"
